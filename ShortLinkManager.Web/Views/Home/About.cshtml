                <div id="linkTest"></div>
                <form method="post" action="@Url.Action("Short")" id="shortMyLinkForm">

                    @Html.Hidden("guestGuid", (string)ViewBag.guestGuid)
                    @Html.Hidden("urlWebApi", (string)ViewBag.urlWebApi)
                    <div class="form-row">
                        <div class="col-12 col-md-9 mb-2 mb-md-0">
                            <input type="text" class="form-control form-control-lg" name="s" placeholder="Enter Valid URL">
                        </div>
                        <div class="col-12 col-md-3">
                            <button type="submit" class="btn btn-block btn-lg btn-primary">Short It!</button>
                        </div>
                    </div>
                </form>


